import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input numbers
        System.out.print("Enter first number: 18");
        int a = sc.nextInt();
        System.out.print("Enter second number: 19");
        int b = sc.nextInt();

        // Find GCD first
        int gcd = findGCD(a, b);

        // Compute LCM
        int lcm = (a * b) / gcd;

        System.out.println("LCM of " + a + " and " + b + " is: " + lcm);
    }

    // Method to compute GCD (Euclidean Algorithm)
    public static int findGCD(int x, int y) {
        while (y != 0) {
            int temp = y;
            y = x % y;
            x = temp;
        }
        return x;
    }
}


